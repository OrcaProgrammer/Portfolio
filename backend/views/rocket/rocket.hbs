    <div id="InputSection" class="input-section">

        <div class="input-box">
            <form action="">
                <label>Payload Mass:</label>
                <input type="number" class="number-input payload-mass-input" value=""> Kg</input>
                <br><br>

                <label>Fairing Mass:</label>
                <input type="number" class="number-input fairing-mass-input" value=""> Kg</input>
            </form>
        </div>
        
        <div class="input-display">
            <p>Payload</p>
            <img src="/img/payload.svg" alt="Image of a payload">
        </div>

        <div class="input-box">
            <form>
                <label class="stage-launch-mass">Stage 1 Launch Mass:</label>
                <input type="text" class="number-input launch-mass-input" value=""> Kg</input>
                <br><br>

                <label class="stage-propellant-mass">Stage 1 Propellant Mass:</label>
                <input type="number" class="number-input prop-mass-input" value=""> Kg</input>
                <br><br>

                <label class="stage-thrust">Stage 1 Thrust:</label>
                <input type="number" class="number-input thrust-input"> N</input>
                <br><br>

                <label class="stage-mass-flow">Stage 1 Mass Flow:</label>
                <input type="number" class="number-input mass-flow-input"> kg/s</input>
            </form>
        </div>

        <div class="input-display">
            <p class="stage-number-display">Stage 1</p>
            <img src="/img/stage.svg" alt="Image of a payload">
        </div>

        <div id="last-input-box" class="input-box">
        </div>

        <div id="last-input-display" class="input-display">
            <button id="AddStageButton"><img src="/img/addButton.svg" alt="Add Button"></button>
        </div>
    </div>

    <button id="CalculateButton">Calculate</button>

    <div id="OutputSection" class="output-section">

    </div>

</div>

